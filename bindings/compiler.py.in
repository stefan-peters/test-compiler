import os

def cpp_flags():
    includes = "${CLANG_INCLUDE_DIRS}/c++/v1;\
    ${CMAKE_CXX_IMPLICIT_INCLUDE_DIRECTORIES};\
    ${CMAKE_SYSTEM_INCLUDE_PATH}".split(";")
    flags = ["-I{0}".format(i) for i in includes if os.path.exists(i)]
    flags.extend("${CMAKE_CXX_FLAGS}".split(" "))
    return flags
